
<div>
    <Form @ref="_form" Model="formData" Name="advanced_search" Class="ant-advanced-search-form">
        <Row Gutter="24">
            <GridCol Span="6" @key="1">
                <FormItem Label="Optimistic">
                    <Input @bind-Value="@context.Optimistic" />
                </FormItem>
            </GridCol>

            <GridCol Span="6" @key="2">
                <FormItem Label="Nominal">
                    <Input @bind-Value="@context.Nominal" />
                </FormItem>
            </GridCol>

            <GridCol Span="6" @key="3">
                <FormItem Label="Pessimistic">
                    <Input @bind-Value="@context.Pessimistic" />
                </FormItem>
            </GridCol>

            <GridCol Span="6" @key="4">
                <Button Type="primary" HtmlType="submit">Calculate</Button>
                <Button Style="margin: 0 8px;" OnClick="()=>{_form?.Reset();}">Clear</Button>
            </GridCol>
        </Row>   
    </Form>

    <div class="site-statistic-demo-card">
        <Row Gutter="16">
            <Col Span="12">
            <Card>
                <Statistic Title="Probability Distribution" Value="11.28" Precision="2" ValueStyle="color: #3f8600;" Suffix="%">
                    <PrefixTemplate>
                        <span><Icon Type="arrow-up" /></span>
                    </PrefixTemplate>
                </Statistic>
            </Card>
            </Col>
            <Col Span="12">
            <Card>
                <Statistic Title="Standard Deviation" Value="9.3" Precision="2" ValueStyle="color: #cf1322;" Suffix="%">
                    <PrefixTemplate>
                        <span><Icon Type="arrow-down" /></span>
                    </PrefixTemplate>
                </Statistic>
            </Card>
            </Col>
        </Row>
    </div>
</div>

<style>
     .site-statistic-demo-card {
        background: #ececec;
        padding: 30px;
    }
</style>