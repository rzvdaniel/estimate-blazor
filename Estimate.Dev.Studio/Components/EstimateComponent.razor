@using Microsoft.AspNetCore.Authorization;

<div>
    <Form @ref="_form" Model="formData" Name="Estimation Form" Class="ant-advanced-search-form">
        <Row Gutter="24">
            <GridCol Span="6" @key="1">
                <FormItem Label="Optimistic (days)">
                    <Input @bind-Value="@context.Optimistic" Size="30" />
                </FormItem>
            </GridCol>

            <GridCol Span="6" @key="2">
                <FormItem Label="Nominal (days)">
                    <Input @bind-Value="@context.Nominal" />
                </FormItem>
            </GridCol>

            <GridCol Span="6" @key="3">
                <FormItem Label="Pessimistic (days)">
                    <Input @bind-Value="@context.Pessimistic" />
                </FormItem>
            </GridCol>

            <GridCol Span="6" @key="4">
                <Button Type="primary" HtmlType="submit" OnClick="()=>{CalculateClick();}">Calculate</Button>
                <Button Style="margin: 0 8px;" OnClick="()=>{_form?.Reset();}">Clear</Button>
            </GridCol>
        </Row>

        <div class="site-statistic-demo-card">
            <Row Gutter="16">
                <Col Span="12">
                <Card>
                    <Space Direction="DirectionVHType.Vertical">
                        <SpaceItem>
                            <Statistic Title="Probability Distribution" Value="@context.ProbabilityDistribution" Precision="1" ValueStyle="color: #3f8600;" Suffix="days">
                                <PrefixTemplate>
                                    <span><Icon Type="calendar" /></span>
                                </PrefixTemplate>
                            </Statistic>
                        </SpaceItem>
                        <SpaceItem>
                            (O + 4 * N + P) / 6
                        </SpaceItem>
                    </Space>
                </Card>
                </Col>
                <Col Span="12">
                <Card>
                    <Space Direction="DirectionVHType.Vertical">
                        <SpaceItem>
                            <Statistic Title="Standard Deviation" Value="@context.StandardDeviation" Precision="1" ValueStyle="color: orange;" Suffix="days">
                                <PrefixTemplate>
                                    <span><Icon Type="calendar" /></span>
                                </PrefixTemplate>
                            </Statistic>
                        </SpaceItem>
                        <SpaceItem>
                            Sigma = (P - O) / 6
                        </SpaceItem>
                    </Space>
                </Card>
                </Col>
            </Row>
        </div>
    </Form>
</div>

<style>
    .site-statistic-demo-card {
        background: #ececec;
        padding: 30px;
    }
</style>